{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true  
        }
    },
    "rules": {
        "arrow-parens": [
            "error",
            "always"
        ],
        "arrow-spacing": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-var": "error",
        "object-shorthand": "error",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-whitespace-before-property": "error",
        "space-before-blocks": "error",
        "space-before-function-paren": [
            "error",
            "always"
        ]
    },
    "globals": {
        "L": true
    }
}